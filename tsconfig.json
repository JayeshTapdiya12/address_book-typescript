{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module Resolution */
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Types */
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,
    "declaration": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
